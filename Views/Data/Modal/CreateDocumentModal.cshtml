@model DocumentModel

<div class="modal-content admin-modal ">
    <div class="modal-body">
        <div class="modal-header">
            <h4>Добавить шаблон/документ</h4>
            <button class="close" data-dismiss="modal" area-hidden="true">X</button>
        </div>
            <div class="modal-body">
                <div class="container">
                    <form asp-antiforgery="true" asp-action="CreateDocument" asp-controller="Data" method="post" enctype="multipart/form-data">
                        <div class="validation" asp-validation-summary="ModelOnly"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                                <label class="label-modal" asp-for="CategorySelected"></label>
                                <select style="margin-left:0;" class="select" asp-for="CategorySelected" class="form-select"  asp-items="@Model.CategoryList"></select>                                                      
                                <span asp-validation-for="CategorySelected"></span>
                        </div>
                        <div class="form-group fields">
                            <label for="inp" class="inp">
                                    <input class="fields" asp-for="Name" placeholder="&nbsp;" required/>
                                    <span class="label">Название</span>
                                    <span class="focus-bg"></span>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                            </label>
                        </div>
                        <div class="form-group fields">
                            <label for="inp" class="inp">
                                    <input class="fields" asp-for="Discription" placeholder="&nbsp;" required/>
                                    <span class="label">Описание</span>
                                    <span class="focus-bg"></span>
                                    <span asp-validation-for="Discription" class="text-danger"></span>
                            </label>
                        </div>
                        <div class="form-group">
                                 <label class="label-modal">Добавьте документ</label>
                                 <br>
                                 <input  type="file" asp-for="File" style="width:100%;display: flex;"/>
                                 <span asp-validation-for="File"></span>
                                 <input type="hidden" asp-for="Url"/>
                         </div> 
                        <div style="margin-top:20px;">
                             <button type="submit" id="submit-material" name="submit-material" class="btn btn-primary button-main">Добавить</button>
                             <button type="button" class="btn btn-secondary button-main"  data-dismiss="modal">Закрыть</button>        
                        </div>
                    </form>
                </div>
            </div>
    </div>
</div>

 
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
