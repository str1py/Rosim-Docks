@model User

<div class="modal-content">
    <div class="modal-body">
        <div class="modal-header">
            <h4>Изменить пользователя </h4>
            <button class="close" data-dismiss="modal" area-hidden="true">X</button>
        </div>
            <div class="modal-body">
                <div class="container">
                    <form asp-antiforgery="true" asp-action="UpdateUser" asp-controller="Administrator" method="post" enctype="multipart/form-data">
                        <div class="validation" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group fields">
                            <label class="label-modal" asp-for="Id"></label>
                            <input class="fields inputfields" type="text" asp-for="Id" /><br />
                            <span asp-validation-for="Id"></span>
                        </div>
                        <div class="form-group fields">
                            <label class="label-modal" asp-for="UserName"></label>
                            <input class="fields inputfields" type="text" asp-for="UserName" /><br />
                            <span asp-validation-for="UserName"></span>
                        </div>
                        <div class="form-group fields">
                            <label class="label-modal"asp-for="Email"></label>
                            <input class="fields inputfields" type="text" asp-for="Email" /><br />
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group fields">
                            <label class="label-modal" asp-for="PhoneNumber"></label>
                            <input class="fields inputfields" type="text" asp-for="PhoneNumber" /><br />
                            <span asp-validation-for="PhoneNumber"></span>
                        </div>

                        <div class="form-group">
                            <label class="label-modal" asp-for="RoleName"></label>
                            <select style="margin:0;" class="select" asp-for="RoleName" class="form-select" asp-items="@Model.Role"></select>
                            <span asp-validation-for="RoleName"></span>
                        </div>

                        <div style="margin-top:40px;">
                            <button type="submit" class="btn btn-primary button-main" >Применить</button>
                            <button type="button" class="btn btn-secondary button-main" data-dismiss="modal">Закрыть</button>   
                        </div>

                    </form>
                </div>
            </div>
    </div>
</div>

 
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
