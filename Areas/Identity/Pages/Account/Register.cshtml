@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


       <div class="parent">
            <form asp-route-returnUrl="@Model.ReturnUrl" class="authform" method="post">
                <img src="/images/logo_FAUGI.svg"  class="d-inline-block align-top" alt="">
                <h3 class="text-center" style="margin-top:30px;">Регистрация</h3>
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="fields" style="margin-top:20px;">               
                    <label for="inp" class="inp" >
                            <input id="transferadress" class="fields"  asp-for="Input.FirstName" placeholder="&nbsp;" required/>
                            <span class="label">Имя</span>
                            <span class="focus-bg"></span>
                    </label>   
                </div>

                <div class="fields" style="margin-top:20px;">               
                    <label for="inp" class="inp" >
                            <input id="transferadress" class="fields"  asp-for="Input.LastName" placeholder="&nbsp;" required/>
                            <span class="label">Фамилия</span>
                            <span class="focus-bg"></span>
                    </label>   
                </div>

                <div class="fields" style="margin-top:20px;">               
                    <label for="inp" class="inp" >
                            <input id="transferadress" class="fields"  asp-for="Input.MiddleName" placeholder="&nbsp;" required/>
                            <span class="label">Отчество</span>
                            <span class="focus-bg"></span>
                    </label>   
                </div>

                <div class="fields" style="margin-top:20px;">               
                    <label for="inp" class="inp" >
                            <input id="transferadress" class="fields"  asp-for="Input.UserName" placeholder="&nbsp;" required/>
                            <span class="label">Логин</span>
                            <span class="focus-bg"></span>
                    </label>   
                </div>

                <div class="fields" style="margin-top:20px;">               
                    <label for="inp" class="inp" >
                            <input id="transferadress" class="fields"  type="email" asp-for="Input.Email" placeholder="&nbsp;" required/>
                            <span class="label">E-mail</span>
                            <span class="focus-bg"></span>
                    </label>   
                </div>
                    
                <div class="fields" style="margin-top:20px;">
                    <label for="inp" class="inp">
                            <input id="transferadress" class="fields" type="password" asp-for="Input.Password" placeholder="&nbsp;" required/>
                            <span class="label">Пароль</span>
                            <span class="focus-bg"></span>
                    </label>   
                </div>
                <div class="fields" style="margin-top:20px;">
                    <label for="inp" class="inp">
                            <input id="transferadress" class="fields" type="password" asp-for="Input.ConfirmPassword" placeholder="&nbsp;" required/>
                            <span class="label">Повторите пароль</span>
                            <span class="focus-bg"></span>
                    </label>   
                </div>
          
                  <button type="submit" style="margin-top:40px;" class="btn bg-primary">Зарегистрироваться</button>
                <hr />
                <div class="mx-auto">
                     <div class="text-center">
                         <span>Уже есть аккаунт?</span>
                         <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Войти!</a>
                     </div>
                </div>
            </form>
          </div>









@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
